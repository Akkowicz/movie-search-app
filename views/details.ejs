<% include partials/header %>
<% if(data.Poster === 'N/A') { data.Poster = "/img/placeholder300x448.jpg";} %>
          <div class="ui segment">
            <div class="column">
              <div class="ui items">
                <div class="item">
                  <div class="image">
                    <img src="<%= data.Poster %>">
                  </div>
                  <div class="content">
                    <a class="header" href="/movies/details?id=<%=data.imdbID %>">
                      <%= data.Title %>
                    </a>
                    <div class="meta">
                      <span><%= data.Year %> <br><%= data.Type %></span>
                    </div>
                    <div class="description">
                      <p>
                        <%= data.Plot %>
                      </p>
                    </div>
                    <div class="extra">
                      <div class="ui list">
                    <%  if (data.Ratings) { %>
                      <%  data.Ratings.forEach((rating) => { %>
                            <div class="item">
                              <i class="star outline icon"></i>
                              <div class="content">
                                <strong><%= rating.Source%>: </strong> <%= rating.Value %>
                              </div>
                            </div>
                      <%  }); %>
                    <%  } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <div class="inverted vertical footer segment">
        <h5>© 2018 Mateusz Przybyłowicz All Rights Reserved</h5>
      </div>
    </div>
  </div>
  <% include partials/footer %>
